            android:singleLine="true"
            android:text="@string/textPoints"
            android:textAlignment="center"
            android:textColor="@color/ForegroundColor"
            android:textSize="34sp"
            android:visibility="invisible"
            app:autoSizeMaxTextSize="34sp"
            app:autoSizeMinTextSize="16sp" />

        <Button
            android:id="@+id/ivExample"
            style="@style/ButtonShadow"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:width="50dp"
            android:height="50dp"
            android:contentDescription="@string/descriptionColorExample"
            android:enabled="false"
            android:hapticFeedbackEnabled="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:text="@string/textNone"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:visibility="invisible"
            app:cornerRadius="@null"
            app:layout_wrapBehaviorInParent="skipped"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

